<?xml version="1.0" encoding="utf-8" ?>
<!--styling the button-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" ><!--style for button when button was pressed-->
        <shape>
            <solid
                android:color="#1bb66a" />
            <stroke
                android:width="1dp"
                android:color="#1f9c5a" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>

    </item>
    <item> <!--style for button -->
        <shape>
            <!--button used gradient color stroke corners padding -->
            <gradient
                android:startColor="#1bb66a"
                android:endColor="#1f9c5a"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#1f9c5a" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
